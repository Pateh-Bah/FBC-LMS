# Django settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,fbc-library.example.com
DATABASE_URL=postgresql://user:password@localhost:5432/fbc_library

# Email settings
EMAIL_HOST=smtp.gmail.com
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_PORT=587
EMAIL_USE_TLS=True

# AWS S3 settings (for media files)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_STORAGE_BUCKET_NAME=fbc-library-media
AWS_S3_REGION_NAME=us-east-1

# Library settings
ANNUAL_SUBSCRIPTION_FEE=100000
FINE_PER_DAY=5000
DEFAULT_FROM_EMAIL=noreply@fbc-library.example.com

# Security settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True

# SSL Certificate Paths
SSL_CERTIFICATE_PATH=/path/to/your/certificate.crt
SSL_PRIVATE_KEY_PATH=/path/to/your/private.key
SSL_CHAIN_PATH=/path/to/your/chain.pem
